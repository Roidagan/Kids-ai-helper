<script>
  // Dark Mode
  function toggleDarkMode() {
    document.body.classList.toggle("dark-mode");
  }

  // Chatbot (smart responses)
  function chat() {
    const input = document.getElementById("userInput").value.toLowerCase();
    let response = "";

    if (input.includes("what is ai")) response = "AI means Artificial Intelligence â€” it helps machines think and learn!";
    else if (input.includes("hello")) response = "Hello! I'm your friendly AI buddy! ğŸ˜Š";
    else if (input.includes("science")) response = "AI helps in science by solving big problems faster!";
    else if (input.includes("danger")) response = "AI can be harmful if misused, so we must use it safely and kindly!";
    else response = "I donâ€™t know that yet, but I'm learning! ğŸ¤–";

    document.getElementById("chatOutput").innerText = response;
  }

  // Voice Reader
  function readOutput() {
    const text = document.getElementById("chatOutput").innerText;
    speechSynthesis.speak(new SpeechSynthesisUtterance(text));
  }

  // Story Generator
  function generateStory() {
    const idea = document.getElementById("storyInput").value;
    document.getElementById("storyOutput").innerText =
      `Once upon a time, ${idea}. They used AI to help people, make life easier, and spread kindness. ğŸŒâœ¨`;
  }

  // Simple Image Creator
  function makeImage() {
    const word = document.getElementById("imageInput").value.toLowerCase();
    const box = document.getElementById("imageBox");
    const shapes = { sun: "â˜€ï¸", star: "â­", robot: "ğŸ¤–", heart: "â¤ï¸", cat: "ğŸ±", tree: "ğŸŒ³", }
    box.innerText = shapes[word] || "ğŸ¨";
  }

  // Quiz
  function startQuiz() {
    document.getElementById("quizContainer").innerHTML = `
      <p><b>Should we share private info like passwords and address with AI?</b></p>
      <button onclick="quizAnswer(true)">No</button>
      <button onclick="quizAnswer(false)">Yes</button>
    `;
  }

  function quizAnswer(correct) {
    document.getElementById("quizContainer").innerHTML =
      correct ? "ğŸ‰ Correct! Keep your info safe!" : "âš ï¸ Not safe! Never share personal info!";
  }
</script>

